.doortodoor{
    display: flex;
    padding: 0 0;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    align-content: center;
}
.options{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.day-top-info {
    align-items: center;
    font-size: 8rpx;
    height: 50rpx;
    width: 340rpx;
    display: flex;
    background-color: #fff;
    margin-right: 50rpx;
    border-radius: 5rpx;
    box-shadow: 0 0rpx 0rpx 1rpx #D9D9D9;
    /*for Android*/
    -webkit-box-shadow: 0px 1px 1px 1px #D9D9D9;
    /*for IOS*/
}
.day-top-time {
    color: rgb(0, 2, 7);
    font-size: 28rpx;
    flex: 5;
    display: flex;
    position: relative;
}

.day-top-time view {
    padding-right: 30rpx;
}

.day-top-time image {
    padding-top: 6rpx;
    position: absolute;
    right: 5rpx;
    width: 40rpx;
    height: 40rpx;
}

.day-top-address {
    flex: 5;
}
.day-top-price {
    flex: 5;
}
.divLine {
    height: 20rpx;
    width: 2rpx;
    background-color: #E0E0E0;
}
.chefs{
    width: 100%;
    display: flex;
    flex: 10;
    flex-direction: column;
    align-items: center;
}
.chef-wrap{
    width: 90%;
    height: 500rpx;
    margin: 50rpx 5% 0 5%;
}
.chef-item{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.chef_cookingphoto{
    position: absolute;
    top: -40rpx;
    margin: 10rpx 5%;
    width: 90%;
    height: 340rpx;
    border-radius: 10rpx;
}
.chef_name{
    display: flex;
    position: relative;
    padding-top: 320rpx;
    flex-direction: row;
    align-items: center;
}
.chef_name image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 75rpx;
    position: absolute;
    bottom: 5rpx;
    margin-left: 90rpx;
    border: solid #FF0000 1px;
}
.chef_name view{
    font-size: 35rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 280rpx;
}
.chef_item_skill{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.chef_evaluate{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 5rpx;
    margin-bottom: 8rpx;
}
.chef_evaluate view:first-child{
    display: flex;
    justify-content: flex-start;
    flex-direction: row;
    align-content: center;
}

.chef_font{
    font-size: 27rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
}
.item_first{
    flex: 6;
    margin-left: 46rpx;
}
.item_last{
    flex: 4;
}
.star {
    width: 10rpx;
}
.star van-rate{
    margin-right: 20rpx;
}