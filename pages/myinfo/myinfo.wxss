.info{
    box-sizing: border-box;
}
.blank{
    width: 100%;
    height: 15rpx;
}
.info_head{
    width: 100%;
    height: 160rpx;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #dcdcdc;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
}
.login{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 10rpx 0;
}
.login image{
    width: 110rpx;
    height: 110rpx;
    border-radius: 55rpx;
    margin-left: 80rpx;
}
.login view{
    margin-left: 50rpx;
}
.functions{ 
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: flex-start;
}  
.functions>view{
    margin-top: 28rpx;
    margin-left: 10%;
    width: 90%;
    border-bottom: solid 1px #ebebeb;
}
.vip{
    display: flex;
    flex-direction: row;    
    justify-content: flex-start;
    align-items: center;
    border: 0;
}
.vip view{
    margin: 0;
}
.function{
    padding-bottom: 23rpx;
}
.adder{
    margin-top: 10rpx;
    flex: 6;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    padding-left: 150rpx;
    padding-bottom: 21rpx;
}
.adder :first-child{
    width:50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}
.states{
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    justify-content: space-around;
    align-items: center;
    padding-top: 8rpx;
}
.states>view{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin-top: 10rpx;
}
.states>view>view{
    padding-top: 10rpx;
}
.order{
    height: 185rpx;
    flex-direction: row; 
    padding-bottom: 0;
}
.order view{
    margin: 0;
}
.order :nth-of-type(1){
    flex:4;
}
.state image{
    width: 50rpx;
    height: 50rpx;
}