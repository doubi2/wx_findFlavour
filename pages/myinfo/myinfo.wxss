.info{
    box-sizing: border-box;
}
.blank{
    width: 100%;
    height: 15rpx;
}
.info_head{
    width: 100%;
    height: 160rpx;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #dcdcdc;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
}
.login{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 10rpx 0;
}
.login image{
    width: 110rpx;
    height: 110rpx;
    border-radius: 55rpx;
    margin-left: 50rpx;
}
.login view{
    margin-left: 50rpx;
}
.functions{ 
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: flex-start;
}  
.functions view{
    margin-top: 28rpx;
    margin-left:  50rpx;
    height: 80rpx;
    width: 100%;
    border-bottom: solid 1px #ebebeb;
}
.vip{
    display: flex;
    flex-direction: row;    
    justify-content: flex-start;
    align-items: center;
    border: 0;
}
.vip view{
    margin: 0;
}
.vip :nth-of-type(1){
    flex: 4;
}
.adder{
    margin-top: 10rpx;
    flex: 6;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    align-content: center;
    justify-content: center;
}
.adder :first-child{
    flex: 5;
}
.adder :last-child{
    flex:6;
}
.state{
    flex: 6;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
}

.order{
    display: flex;
    flex-direction: row; 
}
.order view{
    margin: 0;
}
.order :nth-of-type(1){
    flex:4;
}