page{
    background-color: #E8E8E8;
}
.headimage{
    width: 100%;
    height: 350rpx;
}
.headimage image{
    width: 100%;
    height: 100%;
}
.headcontent{
    display: flex;
    flex-direction: column;
    position: relative;
    width: 100%;
    height: 300rpx;
    background-color: #fff;
}
.content_info{
    position: absolute;
    top: -170rpx;
    background-color: #fff;
    width: 90%;
    height: 350rpx;
    margin: 0 5%;
    border-radius: 10rpx;
    color: #9C9C9C;
    box-shadow: 0 0rpx 0rpx 1rpx #D9D9D9;
    /*for Android*/
    -webkit-box-shadow: 0px 3px 5px 1px #D9D9D9;
}
.content_info first-child{  
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.record{
    display: flex;
    flex-direction: row;
    justify-content:flex-end;
    align-items: center;
    font-size: 25rpx;
    margin-top: 8rpx;
}
.record image{
    width: 35rpx;
    height: 35rpx;
}
.info_center{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.photo{
    display: flex;
}
.photo image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
}
.stars{
    font-size: 20rpx;
    font-weight: 400;
    color: #4A4A4A;
}
.stars text{
    display: flex;
}
.kitchen{
    margin: 8rpx 0;
    font-size: 45rpx;
    color: #515151;
}
.location{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.location image{
    display: flex;
    width: 25rpx;
    height: 25rpx;
}
.location view:first-child{
    display: flex;
    font-size: 25rpx;
    justify-content: center;
    align-items: center;
    color: #515151;
} 
.location view:nth-child(2){
    font-size: 28rpx;
    margin: 8rpx 0;
}
.intr{
    margin-top: 27%;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items: center;
}
.intr_logo{
    color: #515151;
}
.intr_logo image{
    width: 40rpx;
    height: 40rpx;
}  
.intr_logo view{
    margin-left: 10rpx;
    font-size: 30rpx;
}
.serve{
    margin-top: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.serve view{
    margin: 0 20rpx;
    font-size: 25rpx;
}
.diy{
    width: 100%;
    height: 120rpx;
    margin: 30rpx 0;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.diy view{
    display: flex;
    
    font-size: 31rpx;
}
.diy>view:first-child{
    display: flex;
    flex: 2;
    justify-content: space-around;
    align-items: center;
    color: #fff;
    height: 60rpx;
    width: 180rpx;
    background-color: #FF4040;
    border-radius: 10rpx;
    font-size: 35rpx;
    margin: 0 70rpx;
}
.custom-made{
    display: flex;
    flex: 6;
    flex-direction: column;
    justify-content: flex-start;
}
.custom-made view{
    display: flex;
    justify-content: flex-start;
    margin: 5rpx 0;
}
.custom-made view:first-child{
    font-size: 29rpx;
}
.custom-made view:nth-child(2){
    font-size: 22rpx;
}
.todayfood{
    width: 100%;
    height: 2000rpx;
    margin-top: 10rpx;
}