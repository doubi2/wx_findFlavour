}
.article{
    padding: 0;
    font-size: 14rpx;
    color: #000;
  }
  .article .feed-item{
    width: 690rpx;
    padding: 30rpx 30rpx 20rpx;
    margin: 7rpx 0 6rpx 0;
    background: #ffffff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    box-shadow: 0 2px 5px #eeeeee;
  }
  .article .feed-item .feed-source{
    width: 690rpx;
    left: 0;
    height: 50rpx;
  }
  .article .feed-item .feed-source .avatar{
    position: relative;
    display: inline-block;
  }
  .article .feed-item .feed-source a{
    display: inline-block;
    height: 40rpx;
  }
  .article .feed-item .feed-source .avatar image{
    /*position: absolute;*/
    display: inline-block;
    width: 45rpx;
    height: 45rpx;
    border-radius: 45rpx;
    top: 10rpx;
    vertical-align: middle;
  }
  .article .feed-item .feed-source text{
    /*position: absolute;*/
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    vertical-align: middle;
    margin: 0 0 0 15rpx;
    color: #a0acac;
    font-size: 26rpx;
  }
  .article .feed-item .feed-source .item-more{
    display: inline-block;
    width: 40rpx;
    height: 45rpx;
    float: right;
  }
  .article .feed-item .feed-content{
    padding: 10rpx 0 0 0;
  }
  .article .feed-item .feed-content .question text{
    font-size: 28rpx;
    font-weight: 600px;
    line-height: 40rpx;
    text-space: 5rpx;
  }
  .article .feed-item .feed-content .answer-body{
    padding: 10rpx 0 0 0;
    /*height: 10rpx;*/
    font-size: 24rpx;
    line-height: 28rpx;
    color: #5b5b5b;
  }
  .article .feed-item .feed-content .answer-actions{
    width: 690rpx;
    padding: 10rpx 0  0;
    color: #a0acac;
  }
  .article .feed-item .feed-content .answer-actions view{
    display: inline-block;
    vertical-align: text-bottom;
    padding: 0 10rpx 0 0;
    font-size: 24rpx;
  }
  .article .feed-item .feed-content .answer-actions .dot ::after{
    content: "â€¢";
  }